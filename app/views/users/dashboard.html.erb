<div class="grid_5">
  <table class="dash_table">
  <tr>
    <th>Due Tasks</th>
    <th class="view_link"><%= link_to 'All Tasks &raquo;', tasks_path %></th>
  </tr>
  <%- @due_tasks.each do |task| -%>
    <tr class="<%= cycle('even', 'odd') %>">
      <td><%= link_to(task.title, task) %></td>
    </tr>
  <%- end -%>
</table>
</div>

<div class="grid_5">
  <table class="dash_table">
    <tr>
      <th>Waiting On</th>
      <th class="view_link"><%= link_to 'All Tasks &raquo;', tasks_path %></th>
    </tr>
    <%- @expected_tasks.each do |task| -%>
      <tr class="<%= cycle('even', 'odd') %>">
        <td colspan="2"><%= link_to(task.title, task) %></td>
      </tr>
    <%- end -%>
  </table>
</div>

<div class="grid_5 clearfix">
  <table class="dash_table">
  <tr>
    <th>Friends</th>
    <th class="view_link"><%= link_to 'View All &raquo;', connections_path %></th>
  </tr>
  <%- @friends.each do |friend| -%>
    <tr class="<%= cycle('even', 'odd') %>">
      <td colspan="2">
        <%= image_tag friend.gravatar_url(:size => '20', :secure => true) %>
        <%= friend.name %>
      </td>
    </tr>  
  <%- end -%>
</table>
</div>

<div class="clear"></div>

<div id="create-task-form" class="grid_7">
  <% form_for @new_task do |f| %>
  	<%= f.error_messages %>
  	<fieldset>
  		<legend>Create a Task</legend>
  		<ol>
  			<li>
  				<%= f.label :title %>
  				<%= f.text_field :title %>
  			</li>
  			<li>
  				<%= f.label :description %>
  				<%= f.text_area :description %>
  			</li>
  		</ol>
  	</fieldset>
  	<div class="buttons">
  		<%= submit_tag 'Create' %>
  	</div>
  <% end %>
</div>

<div class="grid_8">
  <table class="dash_table">
  <tr>
    <th>Activity Log</th>
  </tr>
  <tr>
    <%- @recent_activities.each do |activity| -%>
      <td><%= activity.description %></td>
    <%- end -%>
  </tr>
</table>
</div>

<div class="clear"></div>