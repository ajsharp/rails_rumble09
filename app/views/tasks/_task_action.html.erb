<% form_for assignment do |f| %>
  <%= f.hidden_field :action, :value => action %>
  <%- if action == "accept_assignment" -%>
    <%= f.submit 'Accept Task' %>
  <%- elsif action == 'decline_assignment' -%>
    <%= f.submit 'Reject Task' %>
  <%- else -%>
    <%= f.submit "Mark Complete" %>
  <%- end -%>
<% end %>