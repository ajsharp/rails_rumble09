<h2>
  Task: <%= @task.title %>
  <% if current_user == @task.creator %>
    <span><%= link_to('edit', edit_task_path(@task)) %></span>
  <% end %>
  <% if @task.assignments.find_by_assignee_id(current_user.id).status == "pending" %>
    <span><%= link_to('Accept', edit_task_path(@task)) %></span>
    <span><%= link_to('Reject', edit_task_path(@task)) %></span>
  <% end %>
  <% if @task.assignments.find_by_assignee_id(current_user.id).status == "accepted" %>
    <span><%= link_to('Mark Complete', edit_task_path(@task)) %></span>
    <span><%= link_to('Pass Task', edit_task_path(@task)) %></span>
  <% end %>
</h2>
<% if @task.assignments.find_by_assignee_id(current_user.id).status == "accepted" %>
  Assigned By: <%= @task.assignments.find_by_assignee_id(current_user.id).assigner.name %>
<% else %>
  Assigned To: <%= @task.current_owner.name %>
<% end %>

<p><%= @task.description %></p> 

<div>
  <h2>Comments</h2>
  <% @task.comments.each do |comment| %>
    <div>
      <%= image_tag comment.user.gravatar_url(:size => '80', :secure => true) %>
      <%= comment.message %>
    </div>

  <% end %>
  <div> 
    <h2>Add a new comment:</h2>
    <% form_for @comment, :url => task_comments_path(:task_id => @task) do |f| %>
      <%= f.label :message %>
      <%= f.text_area :message %>
    <div class="buttons">
  		<%= submit_tag 'Add Comment' %>
  	</div>
  	<% end %>
    
  </div>
</div>