<% @user.password = @user.password_confirmation = nil %>
<%= title "Create a New Account", :h2 %>
<% form_for @user do |f| %>
	<%= f.error_messages %>
	<fieldset>
		<ol>
		  <li>
		    <%= f.label :name, 'Name' %>
		    <%= f.text_field :name %>
		  </li>
			<li>
				<%= f.label :email, 'Email Address (this will be your username)' %>
				<%= f.text_field :email %>
			</li>
			<li>
				<%= f.label :password %>
				<%= f.password_field :password %>
			</li>
			<li>
				<%= f.label :password_confirmation, 'Confirm Password' %>
				<%= f.password_field :password_confirmation %>
			</li>
		</ol>
	</fieldset>
	<div class="buttons">
		<%= submit_tag 'Sign up' %>
		<%= link_to 'Cancel', root_path %>
	</div>
<% end %>
