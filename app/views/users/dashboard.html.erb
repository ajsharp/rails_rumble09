<%= title('Dashboard', :h2) %>

<table>
  <tr>
    <th>Activity Log</th>
  </tr>
  <tr>
    <%- @recent_activities.each do |activity| -%>
      <td><%= activity.description %></td>
    <%- end -%>
  </tr>
</table>

<table>
  <tr>
    <th>Friends</th>
  </tr>
  <tr>
    <%- @friends.each do |friend| -%>
      <td><%= image_tag friend.gravatar_url(:size => '20', :secure => true) %><%= friend.name %></td>
    <%- end -%>
  </tr>
</table>

<table>
  <tr>
    <th>Due Tasks</th>
  </tr>
  <tr>
    <%- @due_tasks.each do |task| -%>
      <td><%= task.title %></td>
    <%- end -%>
  </tr>
</table>

<table>
  <tr>
    <th>Waiting On</th>
  </tr>
  <tr>
    <%- @expected_tasks.each do |task| -%>
      <td><%= task.title %></td>
    <%- end -%>
  </tr>
</table>